# ================conv3 buffering=============================
#The rule of thumb: lower layer cannot directly affects the trunk network, need a buffer conv layer
layer {
  name: "conv3_3_norm"
  type: "Normalize"
  bottom: "conv3_3"
  top: "conv3_3_norm"
  norm_param {
    across_spatial: false
    scale_filler {
      type: "constant"
      value: 40  #1120: 20-->40, since its channel is only 256, so need 80?
    }
    channel_shared: false
  }
}

